---
import PageLayout from '../layouts/BaseLayout.astro'
import Section from '../components/Section.astro'
import Card from '../components/Card.astro'
import ProjectCard from '../components/ProjectCard.astro'
import Label from '../components/Label.astro'
import SkillLayout from '../components/SkillLayout.astro'
import PostPreview from '@/components/blog/PostPreview.astro'

import { Image } from 'astro:assets'
import mainPhoto from '../assets/main-photo.png'

import { getAllPosts, sortMDByDate } from '@/utils'

const languages = ['Python', 'SQL', 'Java', 'Javascript']
const clouds = ['GCP - Google Cloud Platform', 'AWS - Amazone Web Services', 'Aliyun - Alibaba Cloud']
const others = ['Apache Airflow', 'Apache Flink', 'Apache Superset']
const genAI = ['Langchain', 'aisuite', 'LLM Models( Gemini, ChatGPT)']

const MAX_POSTS = 10
const allPosts = await getAllPosts()
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS)
